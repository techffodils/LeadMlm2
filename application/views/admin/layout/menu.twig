<!-- start: MAIN NAVIGATION MENU -->
<ul class="main-navigation-menu">

	{% for MENU  in USER_MENU %}
	<li  {% if  MENU.selected == 'selected' %} class="active open" {% endif %} >
		<a href="{{ MENU.link }}""><i class="fa {{ MENU.icon }}"  target="{{ MENU.target }}"></i> <span class="{{ MENU.name }}"> {{ MENU.name }} </span>
			{% if  MENU.sub_menu  is not null %}
			<i class="icon-arrow"></i>
			{% endif %}  
			<!-- <span class="label label-default pull-right ">LABEL</span> --> 
		</a>
		{% if  MENU.sub_menu  is not null %}
		<ul class="sub-menu">
			{% for SUB_MENU  in  MENU.sub_menu  %}
			<li {% if  SUB_MENU.selected == 'selected' %} class="active open" {% endif %}>
				<a href="{{ SUB_MENU.link }}"  target="{{ SUB_MENU.target }}"><!--<i class="fa {{ SUB_MENU.icon }}"></i>-->
					<span class="{{ SUB_MENU.name }}"> {{ SUB_MENU.name }} </span>
					{% if  SUB_MENU.sub_menu  is not null %}
					<i class="icon-arrow"></i>
					{% endif %}  
				</a>
				{% if  SUB_MENU.sub_menu  is not null %}
				<ul class="sub-menu">
					{% for SUB_SUB_MENU  in  SUB_MENU.sub_menu  %}
					<li {% if  SUB_SUB_MENU.selected == 'selected' %} class="active open" {% endif %}>
						<a href="{{ SUB_SUB_MENU.link }}"  target="{{ SUB_SUB_MENU.target }}">
							<!--<i class="fa {{ SUB_MENU.icon }}"></i>-->
							{{ SUB_SUB_MENU.name }}
						</a>
					</li>
					{% endfor %}
				</ul>
				{% endif %}    
			</li>
			{% endfor %}
		</ul>
		{% endif %}                            
	</li>
	{% endfor %}
</ul>
<!-- end: MAIN NAVIGATION MENU -->
