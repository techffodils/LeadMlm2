            <div class="panel-body">
                <hr>
                {{ form_open('', ' id="change_password" name="change_password"')|raw }}

                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">
                            Select User Name
                        </label>
                        <div class="col-sm-4">
                            <span class="input-icon input-icon-right">
                                <input name="user_name" type="type" placeholder="Select User Name" id="form-field-17" class="form-control">
                                <i class="fa fa-user"></i> </span>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">
                            New Password
                        </label>
                        <div class="col-sm-4">
                            <span class="input-icon input-icon-right">
                                <input name="password" type="password" placeholder="New Password" id="password" class="form-control">

                                <i class="fa fa-lock"></i> </span>

                            <meter max="4" id="password-strength-meter"></meter>
                            <p id="password-strength-text"></p>
                            <div class="hide-show">
                                <span2 class="buttonshow">
                                    Show </span2>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">
                            Re-Enter  Password
                        </label>
                        <div class="col-sm-4">
                            <span class="input-icon input-icon-right">
                                <input name="re_enter_password" type="password" placeholder="Re-Enter  Password" id="form-field-17" class="form-control">

                                <i class="fa fa-lock"></i> </span>
                            <div class="hide-show">
                                <span class="buttonshow">
                                    Show </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">

                        </label>
                        <div class="col-sm-4">
                            <button type="submit"class="btn btn-primary" >
                                Change Password
                            </button>
                        </div>
                    </div>
                </div>
                {{ form_close()|raw }}

                {#                Your Page Content here#}
            </div>
        </div>                                    
    </div>
</div>


