{% include('admin/layout/header.twig')%}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-white">
            <div class="panel-heading">
                <h4 class="panel-title">Backup <span class="text-bold"></span></h4>
                <div class="panel-tools">
                    <div class="dropdown">
                        <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                            <i class="fa fa-cog"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                            <li><a class="panel-collapse collapses" href="#"><i class="fa fa-angle-up"></i> <span>Collapse</span> </a></li>
                            <li><a class="panel-refresh" href="#"><i class="fa fa-refresh"></i> <span>Refresh</span></a></li>
                            <li><a class="panel-config" href="#panel-config" data-toggle="modal"><i class="fa fa-wrench"></i> <span>Configurations</span></a></li>
                            <li><a class="panel-expand" href="#"><i class="fa fa-expand"></i> <span>Fullscreen</span></a></li>
                        </ul>
                    </div>
                    <a class="btn btn-xs btn-link panel-close" href="#">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <!-- start: FAQ -->
                        <div class="tabbable tabs-left faq">
                            <ul id="myTab3" class="nav nav-tabs">
                                <li class="{{tab1}}">
                                    <a href="#backup_tab1" data-toggle="tab">
                                        <i class="fa fa-user"></i>Backup Settings 
                                    </a>
                                </li>
                                <li class="{{tab2}}">
                                    <a href="#backup_tab2" data-toggle="tab">
                                        <i class="fa fa-lock"></i> DataBase Backup
                                    </a>
                                </li>
                                <li class="{{tab3}}">
                                    <a href="#backup_tab3" data-toggle="tab">
                                        <i class="fa fa-lock"></i> Databases
                                    </a>
                                </li>

                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane {{tab1}}" id="backup_tab1">
                                    <div id="accordion" class="panel-group accordion accordion-custom accordion-teal">

                                        <h3 class="margin-bottom-15">Backup Settings</h3>

                                        <br>
                                        {{ form_open('', ' id="add_field_form" name="add_field_form"')|raw }}
                                        <div class="form-horizontal">
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">
                                                    Backup File Type
                                                </label>
                                                <div class="col-sm-4">
                                                    <select name="backup_type" id="backup_type" class="form-control field_type" >
                                                        <option value="">Select Backup Type</option>
                                                        <option value="sql" {% if backup_type=="sql" %} selected {% endif %}>Sql</option>
                                                        <option value="zip" {% if backup_type=="zip" %} selected {% endif %}>Zip</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">
                                                    Deletion Period (Days)
                                                </label>
                                                <div class="col-sm-4">
                                                    <input class="form-control" type="number" name="backup_deletion_period" id="backup_deletion_period" value="{{ backup_deletion_period }}"> 
                                                </div>
                                            </div>        



                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">

                                                </label>
                                                <div class="col-sm-4">
                                                    <button type="submit"class="btn btn-primary" value="db_settings" name="db_settings">
                                                        Update
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        {{ form_close()|raw }}
                                    </div>
                                </div>
                                <div class="tab-pane {{tab2}}" id="backup_tab2">
                                    <div id="accordion2" class="panel-group accordion accordion-custom accordion-teal">
                                        <h3 class="margin-bottom-15"> DataBase Backup</h3>
                                        <br>
                                        <div class="form-horizontal">
                                            <div class="alert alert-block alert-warning fade in">
                                                <button data-dismiss="alert" class="close" type="button">
                                                    ×
                                                </button>
                                                <h4 class="alert-heading"><i class="fa fa-exclamation"></i> Notice!</h4>
                                                <p>
                                                    Click Backup Button For backup Current Database or Click the View button to Find Existing Backups
                                                </p>
                                                <p>
                                                    <a href="#" class="btn btn-yellow tab-pane" id="backup_tab3">
                                                        View
                                                    </a>
                                                    <a href="#" class="btn btn-light-grey">
                                                        Backup
                                                    </a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane {{tab3}}" id="backup_tab3">
                                    <div id="accordion3" class="panel-group accordion accordion-custom accordion-teal">
                                        <h3 class="margin-bottom-15">Databases</h3>
                                        <div class="form-horizontal">
                                            <div class="alert alert-block alert-warning fade in">
                                                <button data-dismiss="alert" class="close" type="button">
                                                    ×
                                                </button>
                                                <h4 class="alert-heading"><i class="fa fa-exclamation"></i> Warning!</h4>
                                                <p>
                                                    Duis mollis, est non commodo luctus,
                                                    nisi erat porttitor ligula, eget lacinia odio sem nec elit. Cras mattis consectetur purus sit amet fermentum.
                                                </p>
                                                <p>
                                                    <a href="#" class="btn btn-yellow">
                                                        Take this action
                                                    </a>
                                                    <a href="#" class="btn btn-light-grey">
                                                        Or do this
                                                    </a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
{% include('admin/layout/footer.twig')%}